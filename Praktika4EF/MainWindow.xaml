<Window x:Class="Praktika4EF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Praktika4EF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0" Name="CustomersButton" Content="Покупатели" Background="LightBlue" Click="CustomersButton_Click"/>
        <Button Grid.Column="1" Name="DirectorsButton" Content="Директоры магазинов" Background="LightBlue" Click="DirectorsButton_Click"/>
        <Button Grid.Column="2" Name="PurchasesButton" Content="Покупки" Background="LightBlue" Click="PurchasesButton_Click"/>
        <Button Grid.Column="3" Name="StoreButton" Content="Магазины" Background="LightBlue" Click="StoreButton_Click"/>
        <DataGrid Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="5" Name="DataTable"></DataGrid>
    </Grid>
</Window>
